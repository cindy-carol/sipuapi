<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'SIPUAPI' %></title>
  
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/locales-all.global.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet" />
  <script src="https://cdn.npmmirror.com/package/chart.js/4.4.1/dist/chart.umd.js"></script>

  <style>
    html, body {
      height: 100%;
      margin: 0;
    }
    
    /* Perbaikan: Gunakan Row hanya jika Sidebar aktif (Admin Only) */
    body {
      display: flex;
      min-height: 100vh;
      overflow-x: hidden;
      background-color: #f8f9fa;
      /* Default adalah column agar Kaprodi/MHS langsung lurus ke bawah */
      flex-direction: column; 
    }

    /* Khusus Admin dengan Sidebar, arahnya jadi horizontal */
    body.admin-with-sidebar {
      flex-direction: row;
    }

    .content-wrapper {
      display: flex;
      flex-direction: column; 
      flex: 1;
      min-width: 0;
      transition: all 0.3s ease;
    }

    main {
      flex: 1 0 auto; 
    }

    .custom-container {
      width: 100%;
      margin: 0 auto;
      padding: 0 15px;
    }

    /* Responsif Web Tengah */
    @media (min-width: 992px) {
      .container-mhs { max-width: 75% !important; }
      .container-kaprodi { max-width: 80% !important; }
      .container-admin-cek { max-width: 85% !important; }
      .container-default { max-width: 95% !important; }
    }
  </style>
</head>

<body class="<%= (role === 'admin' && (typeof hideSidebar === 'undefined' || !hideSidebar)) ? 'admin-with-sidebar' : '' %>">

  <% if (role === 'admin' && (typeof hideSidebar === 'undefined' || !hideSidebar)) { %>
    <%- include('partials/sidebar', {activePage: currentPage, role: 'admin'}) %>
  <% } %>

  <div class="content-wrapper">
    
    <%- include('partials/header') %>

    <% if (role === 'kaprodi' && (typeof hideSidebar === 'undefined' || !hideSidebar)) { %>
      <%- include('partials/navbar', {activePage: currentPage, role: 'kaprodi'}) %>
    <% } %>

    <main class="py-4">
      <% 
        let widthClass = 'container-default';
        if (role === 'mahasiswa') {
           widthClass = 'container-mhs';
        } else if (role === 'kaprodi') {
           widthClass = 'container-kaprodi';
        } else if (role === 'admin' && (typeof hideSidebar !== 'undefined' && hideSidebar)) {
           widthClass = 'container-admin-cek';
        }
      %>
      <div class="custom-container <%= widthClass %>">
        <%- body %>
      </div>
    </main>

    <%- include('partials/footer') %>
    
  </div>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/partials/calendar-handler.js"></script>
  <script src="/js/partials/chart.js"></script>
  <script src="/js/partials/button-handler.js"></script>
  <script src="/js/partials/modal-handler.js"></script>
  <script src="/js/partials/upload-button.js"></script>
  <script src="/js/partials/sidebar-toggle.js"></script>
  <script src="/js/partials/section-toggle.js"></script>

</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'SIPUAPI' %></title>
  
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/list.min.css" rel="stylesheet" />

  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/locales-all.global.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
</head>

<body class="d-flex flex-column min-vh-100">

  <% if(role === 'admin'){ %>
      <% if(!hideSidebar){ %>
          <div class="d-flex flex-row flex-fill">
              <%- include('partials/sidebar', {activePage: currentPage, role: 'admin'}) %>
              
              <div class="content flex-fill d-flex flex-column">
                  <%- include('partials/header') %>
                  <main class="container py-4 flex-fill">
                      <%- body %>
                  </main>
              </div>
          </div>
      <% } else { %>
          <div class="flex-fill d-flex flex-column">
              <%- include('partials/header') %>
              <main class="container py-4 flex-fill" style="width: 75%">
                  <%- body %>
              </main>
          </div>
      <% } %>

  <% } else if(role === 'kaprodi'){ %>
      <div class="flex-fill d-flex flex-column">
          <%- include('partials/header') %>
          <%- include('partials/navbar', {activePage: currentPage, role: 'kaprodi'}) %>
          <main class="container py-4 flex-fill" style="width: 80%">
              <%- body %>
          </main>
      </div>

  <% } else { %>
      <div class="flex-fill d-flex flex-column">
          <%- include('partials/header') %>
          <main class="container py-4 flex-fill" style="width: 75%">
              <%- body %>
          </main>
      </div>
  <% } %>

  <%- include('partials/footer') %>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/partials/calendar-handler.js"></script>
  <script src="/js/partials/chart.js"></script>
  <script src="/js/partials/button-handler.js"></script>
  <script src="/js/partials/modal-handler.js"></script>
  <script src="/js/partials/upload-button.js"></script>
  <script src="/js/partials/sidebar-toggle.js"></script>
  <script src="/js/partials/section-toggle.js"></script>

</body>
</html>
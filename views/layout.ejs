<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'SIPUAPI' %></title>
  
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet" />
  
  <style>
    /* RESET & STICKY FOOTER CORE */
    html, body { 
      height: 100%; 
      margin: 0; 
      padding: 0; 
    }
    
    /* Wrapper untuk Sidebar (Kiri) & Area Utama (Kanan) */
    .layout-wrapper {
      display: flex;
      min-height: 100vh;
      width: 100%;
    }

    /* Area Kanan: Header + Konten + Footer */
    .main-container {
      display: flex;
      flex-direction: column;
      flex-grow: 1; 
      min-width: 0; /* Mencegah overflow horizontal */
      background-color: #f8f9fa;
    }

    /* Konten: Mengambil sisa ruang agar footer terdorong ke bawah */
    .content-area {
      flex: 1 0 auto;
    }

    /* Footer: Tetap di bawah */
    footer {
      flex-shrink: 0;
      background: white;
      border-top: 1px solid #dee2e6;
    }
    
    /* Penyesuaian lebar container berdasarkan role */
    .body-content {
      padding-top: 1.5rem;
      padding-bottom: 3rem;
    }
  </style>
</head>
<body>

  <div class="layout-wrapper">
    <% if (role === 'admin' && !hideSidebar) { %>
      <%- include('partials/sidebar', { activePage: currentPage, role: 'admin' }) %>
      
      <div class="main-container">
        <%- include('partials/header') %>
        <main class="content-area">
          <div class="container-fluid body-content px-4">
            <%- body %>
          </div>
        </main>
        <%- include('partials/footer') %>
      </div>

    <% } else if (role === 'kaprodi' && !hideSidebar) { %>
      <div class="main-container">
        <%- include('partials/header') %>
        <%- include('partials/navbar', { activePage: currentPage, role: 'kaprodi' }) %>
        <main class="content-area">
          <div class="container body-content" style="max-width: 85%">
            <%- body %>
          </div>
        </main>
        <%- include('partials/footer') %>
      </div>

    <% } else { %>
      <div class="main-container">
        <%- include('partials/header') %>
        <main class="content-area">
          <div class="container body-content" style="max-width: 80%">
            <%- body %>
          </div>
        </main>
        <%- include('partials/footer') %>
      </div>
    <% } %>
  </div>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <script src="/js/partials/button-handler.js"></script>
  <script src="/js/partials/modal-handler.js"></script>
  <script src="/js/partials/sidebar-toggle.js"></script>

  <script>
    function toggleLainnya(id) {
        const select = document.getElementById('select-alasan-' + id);
        const wrapper = document.getElementById('wrapper-lainnya-' + id);
        const textarea = document.getElementById('catatan-final-' + id);

        if (select && select.value === 'LAINNYA') {
            wrapper.style.display = 'block';
            textarea.value = ""; // Admin ketik manual
            textarea.focus();
        } else if (select) {
            wrapper.style.display = 'none';
            textarea.value = select.value; // Salin nilai dropdown ke textarea
        }
    }
  </script>
</body>
</html>
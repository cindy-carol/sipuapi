<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'SIPUAPI' %></title>
  
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet" />

  <style>
    html, body {
      height: 100vh;
      margin: 0;
      padding: 0;
      overflow: hidden; 
    }
    
    body {
      display: flex;
      flex-direction: row;
      background-color: #f8f9fa;
    }

    body.no-sidebar {
      flex-direction: column !important;
      overflow-y: auto;
    }

    .content-wrapper {
      flex: 1;
      display: flex;
      flex-direction: column;
      height: 100vh; 
      overflow-y: auto;
      min-width: 0;
      transition: all 0.3s ease;
    }

    main {
      flex: 1 0 auto;
    }

    .custom-container {
      width: 100%;
      margin: 0 auto;
      padding: 0 15px;
    }

    /* Efek glowing & interaksi buat Badge Panduan */
    .btn-warning-custom {
        background-color: #ffc107 !important;
        border: none !important;
        font-weight: 600 !important;
        color: #000 !important;
        transition: transform 0.2s !important;
    }
    .btn-warning-custom:hover {
        transform: scale(1.05);
        background-color: #ffca2c !important;
    }

    @media (min-width: 992px) {
      .container-mhs { max-width: 75% !important; }
      .container-kaprodi { max-width: 80% !important; }
      .container-admin-cek { max-width: 75% !important; }
      .container-default { max-width: 95% !important; }
    }
  </style>
</head>

<body class="<%= (role !== 'admin' || hideSidebar) ? 'no-sidebar' : '' %>">

  <% if (role === 'admin' && !hideSidebar) { %>
    <%- include('partials/sidebar', {activePage: currentPage, role: 'admin'}) %>
  <% } %>

  <div class="content-wrapper">
    <%- include('partials/header') %>

<% if (role === 'mahasiswa') { %>
<div style="position: relative;"> <button type="button" 
            class="btn btn-warning-custom btn-sm shadow rounded-pill px-3" 
            data-bs-toggle="modal" 
            data-bs-target="#previewModal-panduan"
            style="position: absolute; right: 25px; top: 10px; z-index: 1000;">
       <i class="bi bi-question-circle-fill me-1"></i> Panduan Penggunaan
    </button>
  </div>

  <%- include('partials/modal', {
      id: 'previewModal-panduan', // ID harus match sama data-bs-target
      type: 'preview',           // Tipe preview biar nampilin iframe
      title: 'Panduan Penggunaan SIPUAPI',
      src: '/dokumen/panduan_mahasiswa.pdf', // Path file PDF lo
      body: '', 
      catatan: ''
  }) %>
<% } %>

    <% if (role === 'kaprodi' && !hideSidebar) { %>
      <%- include('partials/navbar', {activePage: currentPage, role: 'kaprodi'}) %>
    <% } %>

    <main class="pt-1 pb-5">
      <% 
        let widthClass = 'container-default';
        if (role === 'mahasiswa') widthClass = 'container-mhs';
        else if (role === 'kaprodi') widthClass = 'container-kaprodi';
        else if (role === 'kaprodi' && hideSidebar) widthClass = 'container-admin-cek';
        else if (role === 'admin' && hideSidebar) widthClass = 'container-admin-cek';
      %>
      <div class="custom-container <%= widthClass %>">
        <%- body %>
      </div>
    </main>

    <%- include('partials/footer') %>
  </div>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/partials/sidebar-toggle.js"></script>
  <script src="/js/partials/calendar-handler.js"></script>
  <script src="/js/partials/chart.js"></script>
  <script src="/js/partials/button-handler.js"></script>
  <script src="/js/partials/modal-handler.js"></script>
  <script src="/js/partials/upload-button.js"></script>
  <script src="/js/partials/section-toggle.js"></script>
</body>
</html>
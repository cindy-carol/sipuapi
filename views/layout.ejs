<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'SIPUAPI' %></title>
  
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    /* 1. Reset Body agar Sticky Footer Bekerja */
    html, body {
      height: 100%;
      margin: 0;
    }
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      background-color: #f8f9fa;
    }

    /* 2. Wrapper Utama (Sidebar vs Konten) */
    .main-wrapper {
      display: flex;
      flex: 1; 
      flex-direction: row;
      width: 100%;
    }

    /* 3. Kolom Konten (Header + Main + Footer) */
    .content-wrapper {
      display: flex;
      flex-direction: column;
      flex: 1;
      min-width: 0; /* Mencegah konten meluber */
    }

    /* 4. Area Main Konten */
    main {
      flex: 1 0 auto; /* Mendorong footer ke bawah */
    }

    /* 5. LOGIKA RESPONSIF (Request: Tengah di Web, Normal di Mobile) */
    .responsive-container {
      width: 100%;
      margin-right: auto;
      margin-left: auto;
      padding-right: 15px;
      padding-left: 15px;
    }

    @media (min-width: 992px) {
      /* Mahasiswa: 75% di Web */
      .container-mhs {
        max-width: 75% !important;
      }
      /* Kaprodi: 80% di Web */
      .container-kaprodi {
        max-width: 80% !important;
      }
      /* Admin saat Cek Berkas: 85% di Web */
      .container-admin-cek {
        max-width: 85% !important;
      }
      /* Admin Default: 100% (Karena sudah kepotong Sidebar) */
      .container-admin-default {
        max-width: 95% !important;
      }
    }
  </style>
</head>

<body>

  <div class="main-wrapper">
    
    <% if (role === 'admin' && (typeof hideSidebar === 'undefined' || !hideSidebar)) { %>
      <%- include('partials/sidebar', {activePage: currentPage, role: 'admin'}) %>
    <% } %>

    <div class="content-wrapper">
      
      <%- include('partials/header') %>

      <% if (role === 'kaprodi' && (typeof hideSidebar === 'undefined' || !hideSidebar)) { %>
        <%- include('partials/navbar', {activePage: currentPage, role: 'kaprodi'}) %>
      <% } %>

      <main class="py-4">
        <% 
          // Logika penentuan Class Lebar Kontainer
          let widthClass = 'container-admin-default'; 
          if (role === 'mahasiswa') {
             widthClass = 'container-mhs';
          } else if (role === 'kaprodi') {
             widthClass = 'container-kaprodi';
          } else if (role === 'admin' && typeof hideSidebar !== 'undefined' && hideSidebar) {
             widthClass = 'container-admin-cek';
          }
        %>
        
        <div class="responsive-container <%= widthClass %>">
          <%- body %>
        </div>
      </main>

      <%- include('partials/footer') %>
      
    </div>
  </div>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/partials/calendar-handler.js"></script>
  <script src="/js/partials/chart.js"></script>
  <script src="/js/partials/button-handler.js"></script>
  <script src="/js/partials/modal-handler.js"></script>
  <script src="/js/partials/upload-button.js"></script>
  <script src="/js/partials/sidebar-toggle.js"></script>
  <script src="/js/partials/section-toggle.js"></script>

</body>
</html>
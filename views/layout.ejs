<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'SIPUAPI' %></title>
  
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet" />

  <style>
    html, body {
      height: 100%;
      margin: 0;
    }
    
    /* Root Layout: Menangani Sidebar Admin vs Navbar Kaprodi */
    body {
      display: flex;
      min-height: 100vh;
      background-color: #f8f9fa;
      flex-direction: column; /* Default: Kaprodi/MHS lurus ke bawah */
      overflow-x: hidden;
    }

    /* Khusus Admin dengan Sidebar aktif */
    body.admin-layout {
      flex-direction: row; /* Sidebar di kiri, Konten di kanan */
    }

    /* Wrapper Konten Utama */
    .content-wrapper {
      display: flex;
      flex-direction: column; 
      flex: 1;
      min-width: 0; /* Mencegah elemen lebar merusak layout sidebar */
      transition: all 0.3s ease;
    }

    /* Main Area: Pendorong Footer */
    main {
      flex: 1 0 auto; 
    }

    /* Kontainer Tengah Responsif */
    .custom-container {
      width: 100%;
      margin: 0 auto;
      padding: 0 15px;
    }

    @media (min-width: 992px) {
      .container-mhs { max-width: 75% !important; }
      .container-kaprodi { max-width: 80% !important; }
      .container-admin-cek { max-width: 85% !important; }
      .container-default { max-width: 95% !important; }
    }
  </style>
</head>

<body class="<%= (role === 'admin' && (typeof hideSidebar === 'undefined' || !hideSidebar)) ? 'admin-layout' : '' %>">

  <% if (role === 'admin' && (typeof hideSidebar === 'undefined' || !hideSidebar)) { %>
    <%- include('partials/sidebar', {activePage: currentPage, role: 'admin'}) %>
  <% } %>

  <div class="content-wrapper">
    
    <%- include('partials/header') %>

    <% if (role === 'kaprodi' && (typeof hideSidebar === 'undefined' || !hideSidebar)) { %>
      <%- include('partials/navbar', {activePage: currentPage, role: 'kaprodi'}) %>
    <% } %>

    <main class="py-4">
      <% 
        let widthClass = 'container-default';
        if (role === 'Mahasiswa') widthClass = 'container-mhs';
        else if (role === 'kaprodi') widthClass = 'container-kaprodi';
        else if (role === 'admin' && (typeof hideSidebar !== 'undefined' && hideSidebar)) widthClass = 'container-admin-cek';
      %>
      <div class="custom-container <%= widthClass %>">
        <%- body %>
      </div>
    </main>

    <%- include('partials/footer') %>
    
  </div>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/partials/calendar-handler.js"></script>
  <script src="/js/partials/chart.js"></script>
  <script src="/js/partials/button-handler.js"></script>
  <script src="/js/partials/modal-handler.js"></script>
  <script src="/js/partials/upload-button.js"></script>
  <script src="/js/partials/sidebar-toggle.js"></script>
  <script src="/js/partials/section-toggle.js"></script>

</body>
</html>
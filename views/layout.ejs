<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'SIPUAPI' %></title>
  
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/locales-all.global.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    /* Reset total agar flexbox layout bekerja sempurna */
    html, body {
      height: 100%;
      margin: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .main-wrapper {
      display: flex;
      flex: 1; /* Mengambil sisa ruang vertikal agar footer terdorong */
      flex-direction: row;
    }

    .content-wrapper {
      display: flex;
      flex-direction: column;
      flex: 1;
      min-width: 0;
    }

    /* Kunci agar footer menempel di bawah */
    main {
      flex: 1 0 auto;
    }
  </style>
</head>

<body class="bg-light">

  <div class="main-wrapper">
    
    <% if (role === 'admin' && (typeof hideSidebar === 'undefined' || !hideSidebar)) { %>
      <%- include('partials/sidebar', {activePage: currentPage, role: 'admin'}) %>
    <% } %>

    <div class="content-wrapper">
      
      <%- include('partials/header') %>

      <% if (role === 'kaprodi' && (typeof hideSidebar === 'undefined' || !hideSidebar)) { %>
        <%- include('partials/navbar', {activePage: currentPage, role: 'kaprodi'}) %>
      <% } %>

      <main class="py-4">
        <% 
          // Logika penentuan lebar kontainer
          let containerWidth = '100%'; // Default admin dengan sidebar
          if (role === 'mahasiswa') {
             containerWidth = '75%';
          } else if (role === 'kaprodi') {
             containerWidth = '80%';
          } else if (role === 'admin' && typeof hideSidebar !== 'undefined' && hideSidebar) {
             containerWidth = '85%'; // Untuk halaman cek berkas admin
          }
        %>
        
        <div class="container" style="max-width: <%= containerWidth %>; width: 100%;">
          <%- body %>
        </div>
      </main>

      <%- include('partials/footer') %>
      
    </div>
  </div>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/partials/sidebar-toggle.js"></script>
  </body>
</html>
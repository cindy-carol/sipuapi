<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'SIPUAPI' %></title>
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/locales-all.global.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/main.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/list.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>

  <style>
    /* RESET DASAR */
    html, body { height: 100%; margin: 0; padding: 0; }
    
    /* WRAPPER UTAMA: Sidebar (Kiri) & Area Utama (Kanan) */
    .layout-wrapper {
      display: flex;
      min-height: 100vh;
      width: 100%;
    }

    /* AREA KANAN: Header + Konten + Footer */
    .main-container {
      display: flex;
      flex-direction: column;
      flex-grow: 1; 
      min-width: 0; /* Mencegah overflow */
    }

    /* KONTEN: Mendorong footer ke paling bawah */
    .content-area {
      flex: 1 0 auto;
    }

    /* FOOTER: Tetap di bawah */
    footer {
      flex-shrink: 0;
    }
  </style>
</head>
<body>

  <div class="layout-wrapper">
    <% if (role === 'admin' && !hideSidebar) { %>
      <%- include('partials/sidebar', {activePage: currentPage, role: 'admin'}) %>
      
      <div class="main-container">
        <%- include('partials/header') %>
        <main class="content-area">
          <div class="container py-4" style="max-width: 100%">
            <%- body %>
          </div>
        </main>
        <%- include('partials/footer') %>
      </div>

    <% } else if (role === 'kaprodi' && !hideSidebar) { %>
      <div class="main-container">
        <%- include('partials/header') %>
        <%- include('partials/navbar', {activePage: currentPage, role: 'kaprodi'}) %>
        <main class="content-area">
          <div class="container py-4" style="width: 80%">
            <%- body %>
          </div>
        </main>
        <%- include('partials/footer') %>
      </div>

    <% } else { %>
      <div class="main-container">
        <%- include('partials/header') %>
        <main class="content-area">
          <div class="container py-4" style="width: 75%">
            <%- body %>
          </div>
        </main>
        <%- include('partials/footer') %>
      </div>
    <% } %>
  </div>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/partials/calendar-handler.js"></script>
  <script src="/js/partials/chart.js"></script>
  <script src="/js/partials/button-handler.js"></script>
  <script src="/js/partials/modal-handler.js"></script>
  <script src="/js/partials/upload-button.js"></script>
  <script src="/js/partials/sidebar-toggle.js"></script>
  <script src="/js/partials/section-toggle.js"></script>

</body>
</html>
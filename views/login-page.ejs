

  <div class="container-fluid text-center mb-3">
    <h1>Selamat Datang<br />Silakan pilih status Anda</h1>
  </div>

  <div class="container d-flex justify-content-center">
    <div class="text-start my-2">
      <div class="form-check d-flex align-items-center">
        <input class="form-check-input me-2" type="radio" name="role" id="radioMahasiswa" value="mahasiswa" />
        <label class="form-check-label" for="radioMahasiswa">
          <h2 class="fs-3">Mahasiswa</h2>
        </label>
      </div>

      <div class="form-check d-flex align-items-center">
        <input class="form-check-input me-2" type="radio" name="role" id="radioAdmin" value="admin" />
        <label class="form-check-label" for="radioAdmin">
          <h2 class="fs-3">Admin</h2>
        </label>
      </div>

      <div class="form-check d-flex align-items-center">
        <input class="form-check-input me-2" type="radio" name="role" id="radioKaprodi" value="kaprodi" />
        <label class="form-check-label" for="radioKaprodi">
          <h2 class="fs-3">Kaprodi</h2>
        </label>
      </div>
    </div>
  </div>

  <div class="container mb-4">
    <div class="col d-flex justify-content-center">
      <button id="submitBtn" class="btn btn-primary px-4">Masuk</button>
    </div>
  </div>

  <!-- Script redirect berdasarkan role -->
  <script>
    document.getElementById("submitBtn").addEventListener("click", function () {
      const role = document.querySelector('input[name="role"]:checked');

      if (!role) {
        alert("Silakan pilih salah satu role terlebih dahulu.");
        return;
      }

      switch (role.value) {
        case "admin":
          window.location.href = "/admin/login-admin";
          break;
        case "kaprodi":
          window.location.href = "/kaprodi/login-kaprodi";
          break;
        case "mahasiswa":
          window.location.href = "/mahasiswa/login-mahasiswa";
          break;
        default:
          alert("Role tidak dikenal.");
      }
    });
  </script>


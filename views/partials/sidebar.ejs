<style>
  /* --- Style Sidebar Utama --- */
  .sidebar {
    width: 250px;
    background-color: #003875;
    color: white;
    transition: margin-left 0.3s ease;
    height: 100vh;
    position: sticky;
    top: 0;
    overflow-y: auto;
    z-index: 1050;
    display: flex;
    flex-direction: column;
  }

  .sidebar.collapsed {
    margin-left: -250px;
  }

  /* Link Navigasi */
  .sidebar .nav-link {
    color: #fff;
    padding: 12px 20px;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.2s ease;
    cursor: pointer; /* Pastikan kursor berubah saat diarahkan */
  }

  .sidebar .nav-link:hover, 
  .sidebar .nav-link.active {
    background-color: rgba(255, 255, 255, 0.15);
    color: white;
    border-left: 4px solid #ffc107;
  }

  /* Hamburger Button - Digeser agar tidak menimpa teks menu */
  #toggleSidebar {
    position: fixed;
    top: 10px;
    left: 10px;
    z-index: 1100;
    box-shadow: 0 4px 6px rgba(0,0,0,0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 42px;
    height: 42px;
    border-radius: 8px;
    border: none;
    background-color: white;
    color: #003875;
  }

  /* Beri padding top pada list pertama agar tidak tertutup tombol hamburger */
  .nav.flex-column.mt-2 {
    margin-top: 60px !important;
  }

  /* Submenu Style - Default Hidden */
  #daftarSubmenu {
    display: none; 
    list-style: none;
    padding: 0;
    margin: 0;
  }

  #daftarSubmenu .nav-link {
    padding-left: 52px;
    font-size: 0.88rem;
    background-color: rgba(0, 0, 0, 0.15);
  }
</style>

<button class="btn" id="toggleSidebar" title="Toggle Menu">
  <i class="bi bi-list fs-4"></i>
</button>

<% if (role === 'admin') { %>
<div class="sidebar shadow-lg" id="sidebarMain">
  <ul class="nav flex-column mt-2">
    <li class="nav-item">
      <a class="nav-link <%= activePage === 'dashboard' ? 'active' : '' %>" href="/admin/dashboard">
        <i class="bi bi-speedometer2"></i> <span>Beranda</span>
      </a>
    </li>

    <li class="nav-item">
      <a id="toggleDaftar" class="nav-link d-flex justify-content-between align-items-center <%= ['daftar-dosen','daftar-mahasiswa'].includes(activePage) ? 'active' : '' %>">
        <div class="d-flex align-items-center gap-2">
           <i class="bi bi-people"></i> <span>Dosen & Mahasiswa</span>
        </div>
        <i id="iconDropdown" class="bi <%= ['daftar-dosen','daftar-mahasiswa'].includes(activePage) ? 'bi-caret-up-fill' : 'bi-caret-down-fill' %> small"></i> 
      </a>

      <ul class="nav flex-column" id="daftarSubmenu" style="display: <%= ['daftar-dosen','daftar-mahasiswa'].includes(activePage) ? 'block' : 'none' %>;"> [cite: 10]
        <li>
          <a class="nav-link <%= activePage === 'daftar-dosen' ? 'active' : '' %>" href="/admin/daftar-dosen">Daftar Dosen</a>
        </li>
        <li>
          <a class="nav-link <%= activePage === 'daftar-mahasiswa' ? 'active' : '' %>" href="/admin/daftar-mahasiswa">Daftar Mahasiswa</a>
        </li>
      </ul>
    </li>

    <li class="nav-item">
      <a class="nav-link <%= activePage === 'bagi-dosbing' ? 'active' : '' %>" href="/admin/bagi-dosbing">
        <i class="bi bi-person-badge"></i> <span>Dosen Pembimbing</span>
      </a>
    </li>
    
    <li class="nav-item">
      <a class="nav-link <%= activePage === 'verifikasi' ? 'active' : '' %>" href="/admin/verifikasi">
        <i class="bi bi-patch-check"></i> <span>Verifikasi Berkas</span>
      </a>
    </li>

    <li class="nav-item">
      <a class="nav-link <%= activePage === 'jadwal-ujian' ? 'active' : '' %>" href="/admin/jadwal-ujian">
        <i class="bi bi-calendar3"></i> <span>Jadwal Ujian</span>
      </a>
    </li>

    <li class="nav-item">
      <a class="nav-link <%= activePage === 'monitoring' ? 'active' : '' %>" href="/admin/monitoring">
        <i class="bi bi-graph-up-arrow"></i> <span>Monitoring</span>
      </a>
    </li>

    <li class="nav-item">
      <a class="nav-link <%= activePage === 'kelola-akun' ? 'active' : '' %>" href="/admin/kelola-akun">
        <i class="bi bi-shield-lock"></i> <span>Kelola Akun</span>
      </a>
    </li>
  </ul>
</div>
<% } %>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sidebar = document.getElementById('sidebarMain');
    const toggleBtn = document.getElementById('toggleSidebar');
    const toggleDaftar = document.getElementById('toggleDaftar');
    const daftarSubmenu = document.getElementById('daftarSubmenu');
    const iconDropdown = document.getElementById('iconDropdown');

    // 1. Logika Hamburger (Sidebar Toggle)
    if(toggleBtn && sidebar) {
      toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('collapsed');
        localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
      });

      if (localStorage.getItem('sidebarCollapsed') === 'true') {
        sidebar.classList.add('collapsed');
      }
    }

    // 2. Logika Dropdown Submenu
    if(toggleDaftar && daftarSubmenu) {
      toggleDaftar.style.cursor = 'pointer';
      
      toggleDaftar.addEventListener('click', (e) => {
        e.preventDefault();
        
        // Cek status display saat ini
        const isCurrentlyHidden = window.getComputedStyle(daftarSubmenu).display === 'none';
        
        if (isCurrentlyHidden) {
          daftarSubmenu.style.display = 'block'; [cite: 10]
          iconDropdown.classList.replace('bi-caret-down-fill', 'bi-caret-up-fill'); [cite: 9]
        } else {
          daftarSubmenu.style.display = 'none'; [cite: 10]
          iconDropdown.classList.replace('bi-caret-up-fill', 'bi-caret-down-fill'); [cite: 9]
        }
      });
    }
  });
</script>
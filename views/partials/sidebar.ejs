<style>
  /* --- Style Sidebar Utama --- */
  .sidebar {
    width: 250px;
    background-color: #003875; /* Biru Unila */
    color: white;
    transition: margin-left 0.3s ease;
    
    /* KUNCI: Sticky & Scrollable Internal */
    height: 100vh;           /* Tinggi pas layar  */
    position: sticky;        /* Tetap di tempat saat konten di-scroll */
    top: 0;
    overflow-y: auto;        /* Bisa scroll di dalam sidebar saja */
    z-index: 1050;           /* Di bawah tombol hamburger  */
    display: flex;
    flex-direction: column;
  }

  /* Status Sidebar Tertutup */
  .sidebar.collapsed {
    margin-left: -250px;
  }

  /* Styling Scrollbar Sidebar (Agar lebih tipis dan bersih) */
  .sidebar::-webkit-scrollbar {
    width: 5px;
  }
  .sidebar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
  }

  /* Header di dalam Sidebar */
  .sidebar-header {
    padding: 1.5rem 1rem;
    text-align: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Link Navigasi */
  .sidebar .nav-link {
    color: #fff;
    padding: 12px 20px;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.2s ease;
  }

  .sidebar .nav-link:hover, 
  .sidebar .nav-link.active {
    background-color: rgba(255, 255, 255, 0.15);
    color: white;
    border-left: 4px solid #ffc107; /* Aksen Kuning Unila */
  }

  .sidebar .nav-link i {
    font-size: 1.2rem;
    width: 20px;
    text-align: center;
  }

  /* Hamburger Floating Button */
  #toggleSidebar {
    position: fixed;
    top: 15px;
    left: 15px;
    z-index: 1100; /* Paling atas agar selalu bisa diklik */
    box-shadow: 0 4px 6px rgba(0,0,0,0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 42px;
    height: 42px;
    border-radius: 8px;
    border: none;
    background-color: white;
    color: #003875;
  }

  /* Submenu Style */
  #daftarSubmenu .nav-link {
    padding-left: 52px;
    font-size: 0.88rem;
    background-color: rgba(0, 0, 0, 0.15);
  }

  /* Penyesuaian Mobile (Sidebar Menutup Layar) */
  @media (max-width: 991.98px) {
    .sidebar {
      position: fixed;
      height: 100vh;
    }
  }
</style>

<button class="btn" id="toggleSidebar" title="Toggle Menu">
  <i class="bi bi-list fs-4"></i>
</button>

<% if (role === 'admin') { %>
<div class="sidebar shadow-lg" id="sidebarMain">
  
  <div class="sidebar-header">
    <div class="d-flex align-items-center justify-content-center gap-2">
       <img src="/images/unila.png" alt="Logo" style="height: 35px; width: auto;">
       <span class="fw-bold">ADMIN PANEL</span>
    </div>
  </div>

  <ul class="nav flex-column mt-2">
    <li class="nav-item">
      <a class="nav-link <%= activePage === 'dashboard' ? 'active' : '' %>" href="/admin/dashboard">
        <i class="bi bi-speedometer2"></i> <span>Beranda</span>
      </a>
    </li>

    <li class="nav-item">
      <a id="toggleDaftar" href="#" class="nav-link d-flex justify-content-between align-items-center <%= ['daftar-dosen','daftar-mahasiswa'].includes(activePage) ? 'active' : '' %>">
        <div class="d-flex align-items-center gap-2">
           <i class="bi bi-people"></i> <span>Dosen & Mahasiswa</span>
        </div>
        <i id="iconDropdown" class="bi <%= ['daftar-dosen','daftar-mahasiswa'].includes(activePage) ? 'bi-caret-up-fill' : 'bi-caret-down-fill' %> small"></i>
      </a>

      <ul class="nav flex-column" id="daftarSubmenu" style="display: <%= ['daftar-dosen','daftar-mahasiswa'].includes(activePage) ? 'block' : 'none' %>;">
        <li>
          <a class="nav-link <%= activePage === 'daftar-dosen' ? 'active' : '' %>" href="/admin/daftar-dosen">Daftar Dosen</a>
        </li>
        <li>
          <a class="nav-link <%= activePage === 'daftar-mahasiswa' ? 'active' : '' %>" href="/admin/daftar-mahasiswa">Daftar Mahasiswa</a>
        </li>
      </ul>
    </li>

    <li class="nav-item">
      <a class="nav-link <%= activePage === 'bagi-dosbing' ? 'active' : '' %>" href="/admin/bagi-dosbing">
        <i class="bi bi-person-badge"></i> <span>Dosen Pembimbing</span>
      </a>
    </li>
    
    <li class="nav-item">
      <a class="nav-link <%= activePage === 'verifikasi' ? 'active' : '' %>" href="/admin/verifikasi">
        <i class="bi bi-patch-check"></i> <span>Verifikasi Berkas</span>
      </a>
    </li>

    <li class="nav-item">
      <a class="nav-link <%= activePage === 'jadwal-ujian' ? 'active' : '' %>" href="/admin/jadwal-ujian">
        <i class="bi bi-calendar3"></i> <span>Jadwal Ujian</span>
      </a>
    </li>

    <li class="nav-item">
      <a class="nav-link <%= activePage === 'monitoring' ? 'active' : '' %>" href="/admin/monitoring">
        <i class="bi bi-graph-up-arrow"></i> <span>Monitoring</span>
      </a>
    </li>

    <li class="nav-item">
      <a class="nav-link <%= activePage === 'kelola-akun' ? 'active' : '' %>" href="/admin/kelola-akun">
        <i class="bi bi-shield-lock"></i> <span>Kelola Akun</span>
      </a>
    </li>
  </ul>
</div>
<% } %>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sidebar = document.getElementById('sidebarMain');
    const toggleBtn = document.getElementById('toggleSidebar');
    const toggleDaftar = document.getElementById('toggleDaftar');
    const daftarSubmenu = document.getElementById('daftarSubmenu');
    const iconDropdown = document.getElementById('iconDropdown');

    // --- Logika Hamburger (Sidebar Toggle) ---
    if(toggleBtn && sidebar) {
      toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('collapsed');
        
        // Simpan status ke localStorage 
        const isCollapsed = sidebar.classList.contains('collapsed');
        localStorage.setItem('sidebarCollapsed', isCollapsed);
      });

      // Cek status terakhir dari localStorage agar tidak reset pas refresh
      const savedState = localStorage.getItem('sidebarCollapsed');
      if (savedState === 'true') {
        sidebar.classList.add('collapsed');
      }
    }

    // --- Logika Dropdown Submenu ---
    if(toggleDaftar) {
      toggleDaftar.addEventListener('click', (e) => {
        e.preventDefault();
        const isHidden = (daftarSubmenu.style.display === 'none' || daftarSubmenu.style.display === '');
        daftarSubmenu.style.display = isHidden ? 'block' : 'none'; [cite: 10]
        
        // Ganti icon panah
        iconDropdown.classList.toggle('bi-caret-down-fill', !isHidden); [cite: 9]
        iconDropdown.classList.toggle('bi-caret-up-fill', isHidden); [cite: 9]
      });
    }
  });
</script>
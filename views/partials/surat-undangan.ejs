<style>
    /* 1. Definisikan Font */
    @font-face {
        font-family: 'Times New Roman Custom';
        src: url("https://pqhvckeycgcqlnjcjqvp.supabase.co/storage/v1/object/public/storage_sipuapi/times.ttf") format("truetype");
    }
    @font-face {
        font-family: 'Cambria Custom';
        src: url("https://pqhvckeycgcqlnjcjqvp.supabase.co/storage/v1/object/public/storage_sipuapi/cambria.ttf") format("truetype");
    }

    /* 2. RESET MARGIN UNTUK SUMMERNOTE (PENTING!) */
    /* Ini untuk mengatasi masalah jarak yang "jauh" karena tag <p> dari editor */
    .kop-render p, .content-render p {
        margin: 0 !important;
        padding: 0 !important;
        line-height: 1.2 !important;
    }

    .surat-wrapper {
        font-size: 11.5pt;
        font-family: "Times New Roman Custom", serif;
        line-height: 1.3;
    }

    /* Kop Styling */
    .kop-render {
        text-align: center;
        font-family: "Times New Roman Custom", serif;
    }

    .alamat-default {
        font-family: "Cambria Custom", serif;
        font-size: 10pt;
    }

    .kop-line {
        border-top: 5px double black;
        margin: 10px 0 15px 0;
    }

    .baris-info, .informasi, .content-render, .signature, .catatan {
        padding: 0 10mm 0 15mm;
    }

    .signature {
        margin-top: 30px;
        text-align: right;
    }
    .signature-content {
        display: inline-block;
        text-align: left;
    }
</style>

<div class="surat-wrapper">
    <div style="display: flex; align-items: flex-start; gap: 15px; padding: 0 10mm 0 15mm;">
        <div style="flex-shrink: 0;">
            <img src="<%= logoPath %>" alt="Logo" style="width: 110px; height: auto;">
        </div>

        <div style="flex-grow: 1;">
            <div class="kop-render">
                <% if (typeof kopSurat !== 'undefined' && kopSurat) { %>
                    <%- kopSurat %> <% } else { %>
                    KEMENTERIAN PENDIDIKAN TINGGI, SAINS, DAN TEKNOLOGI<br>
                    <strong>UNIVERSITAS LAMPUNG - FAKULTAS TEKNIK</strong><br>
                    <h3 style="margin:0;">PROGRAM STUDI PROGRAM PROFESI INSINYUR</h3>
                <% } %>
            </div>

            <div class="alamat-default" style="text-align: center;">
                Gedung A Dekanat Fakultas Teknik <br>
                Jalan Prof. Dr. Soemantri Brojonegoro No. 1 Bandar Lampung 35145 <br>
                Telepon (0721) 704947 Fax. (0721) 704947 <br>
                Email: <a href="mailto:ppi@eng.unila.ac.id">ppi@eng.unila.ac.id</a>
            </div>
        </div>
    </div>

    <div class="kop-line"></div>

    <div class="baris-info" style="display: flex; justify-content: space-between; margin-bottom: 15px;">
        <table style="border: none;">
            <tr>
                <td style="width: 50px;">Nomor</td>
                <td>:</td>
                <td style="text-indent: 1.5em;">/UN26.15.17/PPI.00/2025</td>
            </tr>
            <tr>
                <td>Hal</td>
                <td>:</td>
                <td>Undangan Ujian Akhir Profesi</td>
            </tr>
        </table>
        <div><%= tanggalSurat %></div>
    </div>

    <div class="informasi">
        Yth.<br>
        <strong><%= pembimbing1 || '-' %></strong><br>
        <strong><%= pembimbing2 || '-' %></strong><br>
        <strong><%= penguji || '-' %></strong><br>
        <strong><%= namaMahasiswa %> (Mahasiswa)</strong><br>
                  <div style="margin-top: 10px;">
              di
              <div style="text-indent: 1.5em;">
                  Tempat
              </div>
          </div>
        <p style="margin-top: 15px;">Dengan hormat,</p>
    </div>

    <div class="content-render">
        <div style="text-align: justify;">
            <%- kalimatPembuka %> </div>

        <table style="border: none; margin-top: 10px; width: 100%;">
            <tr>
                <td style="width: 130px;">Hari / Tanggal</td>
                <td style="width: 10px;">:</td>
                <td><%= tanggalUjian || '-' %></td>
            </tr>
            <tr>
                <td>Waktu</td>
                <td>:</td>
                <td><%= waktuUjian || '-' %></td>
            </tr>    
            <tr>
                <td style="vertical-align: top;">Tempat</td>
                <td style="vertical-align: top;">:</td>
                <td>
                    <% if (tipeUjian === 'offline') { %>
                        <%= tempatUjian %>
                    <% } else { %>
                        Zoom Meeting<br>
                        ID Rapat: <%= meetingID %><br>
                        Passcode: <%= passcode %><br>
                        <a href="<%= linkZoom %>" style="color: blue; text-decoration: underline;"><%= linkZoom %></a>
                    <% } %>
                </td>
            </tr>
        </table>
        
        <br>
        <table style="border: none; width: 100%;">
            <tr><td style="width: 130px;">Pembimbing I</td><td style="width: 10px;">:</td><td><%= pembimbing1 %></td></tr>
            <tr><td>Pembimbing II</td><td>:</td><td><%= pembimbing2 %></td></tr>
            <tr><td>Penguji</td><td>:</td><td><%= penguji %></td></tr>
        </table>
        
        <div style="margin-top: 15px;">
            <%- isi %> </div>

        <table style="border: none; width: 100%; margin-top: 5px;">
            <tr><td style="width: 130px;">Nama</td><td style="width: 10px;">:</td><td><%= namaMahasiswa %></td></tr>
            <tr><td>NPM</td><td>:</td><td><%= npm %></td></tr>
        </table>

        <div style="margin-top: 10px;">
            <%- kalimatPenutup %> </div>
    </div>

    <div class="signature">
        <div class="signature-content">
            Ketua,<br><br><br><br>
            <strong><%= kaprodi?.nama || '-' %></strong><br>
            NIP <%= kaprodi?.nip_dosen || '-' %>
        </div>
    </div>

    <div class="catatan" style="margin-top: 20px;">
        <div style="font-weight: bold; text-decoration: underline;">Catatan:</div>
        <div style="font-size: 10pt;"><%- catatanKaki %></div>
    </div>
</div>